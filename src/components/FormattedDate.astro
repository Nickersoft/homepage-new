---
export interface Props {
  date: Date;
}

const { date } = Astro.props;
---

<time
  class="text-xs uppercase tracking-widest font-medium text-muted dark:text-muted-dark"
  datetime={date.toISOString()}
>
  {
    date.toLocaleDateString("en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
