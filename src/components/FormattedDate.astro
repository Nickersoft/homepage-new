---
export interface Props {
  date: Date;
}

const { date } = Astro.props;
---

<time class="text-xs text-black dark:text-white dark:text-opacity-100 uppercase tracking-widest font-semibold opacity-50" datetime={date.toISOString()}>
  {
    date.toLocaleDateString("en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
