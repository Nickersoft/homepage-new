---
export type Props = {
  variant?: "filled" | "outlined";
  size?: "sm" | "md";
};

const { variant = "filled", size = "md" } = Astro.props;
---

<span
  class:list={[
    {
      filled: variant === "filled",
      sm: size === "sm",
    },
  ]}
  class="pill"><slot /></span
>

<style lang="postcss"> 
  .pill {
    @apply inline-flex flex-row items-center gap-2 text-sm px-4 py-2 rounded-full;
    @apply text-opacity-75 dark:text-dark dark:text-opacity-75;
    @apply border border-subtle-light dark:border-subtle-dark;
    
    &.filled {
      @apply dark:bg-gray-800;
    }

    &.sm {
      @apply text-xs px-3 py-1.5;
    }
  }
</style>
