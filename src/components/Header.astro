  <nav class="flex flex-row justify-center items-center gap-4">
    <HeaderLink href="/code">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="10"
        fill="none"
        viewBox="0 0 16 10"
      >
        <path
          fill="currentColor"
          d="M5.92 8.68 2.24 5l3.68-3.68L4.8.2 0 5l4.8 4.8 1.12-1.12Zm4.16 0L13.76 5l-3.68-3.68L11.2.2 16 5l-4.8 4.8-1.12-1.12Z"
        >
        </path>
      </svg>
