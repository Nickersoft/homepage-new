---
import Icon from "astro-iconify";

export interface Props {
  name: string;
  pack: string;
  href: string;
}

const { name, pack, href } = Astro.props;
---

<a href={href} target="_blank" rel="noopener noreferrer">
  <Icon name={name} pack={pack} />
</a>

<style lang="postcss" >
  a {
    @apply opacity-75 hover:opacity-100 transition-all duration-150 cursor-pointer;

    svg {
      @apply w-6 h-6;
    }
  }    
</style>
