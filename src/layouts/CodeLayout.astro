---
import { TAGS } from "../consts";

import CodeNav from "../components/CodeNav.astro";
import BaseLayout from "./BaseLayout.astro";
import { Icon } from "astro-iconify";

export interface Props {
  title: string;
  tagline: string;
  code: string;
  site?: string;
  tags: (keyof typeof TAGS)[];
}

const { tags, code, site, title, tagline } = Astro.props;
---

<BaseLayout>
  <div
    class="container grid"
    style="grid-template-columns: min-content auto auto"
  >
    <CodeNav />

    <article class="flex-grow leading-loose">
      <h3 class="font-display text-5xl leading-relaxed">
        {title}
      </h3>

      <span class="font-display text-xl block">
        {tagline}
      </span>

      <ul class="flex flex-row items-center justify-start gap-4 py-8">
        {
          tags.map((tag) => (
            <li class="border-r pr-4 leading-snug border-white border-opacity-20 last-of-type:border-none">
              <a
                class="font-serif opacity-75 hover:opacity-100 transition-opacity duration-150 cursor-pointer active:opacity-50 text-sm italic"
                href={TAGS[tag]}
                target="_blank"
                rel="noreferrer"
              >
                {tag}
              </a>
            </li>
          ))
        }
      </ul>

      <slot />

      <div class="flex flex-row items-center gap-4 justify-start py-8">
        {
          site && (
            <a href={site} target="_blank" rel="noreferrer" class="btn primary">
              Visit site
              <Icon name="arrow-right" pack="mdi" class="w-4 h-4" />
            </a>
          )
        }
        <a
          target="_blank"
          rel="noreferrer"
          href={`https://www.github.com/${code}`}
          class="btn"
          class:list={site ? "secondary" : "primary"}
        >
          <Icon name="github" pack="mdi" class="w-4 h-4" />
          View the code
        </a>
      </div>
    </article>
  </div>
</BaseLayout>

<style lang="postcss">
  .btn {
    @apply py-2 px-4 flex gap-2 flex-row items-center justify-center;

    &:active {
      @apply scale-[0.99] opacity-50;
    }

    &.primary {
      @apply border border-white rounded-sm;
    }

    &.secondary {
      @apply rounded-md transition-all duration-150;

      &:hover {
        @apply bg-white bg-opacity-10;
      }
    }
  }
</style>
