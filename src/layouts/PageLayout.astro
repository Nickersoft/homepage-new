---
import BaseLayout from "./BaseLayout.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<BaseLayout>
  <div class="max-w-2xl mx-auto">
    <h1 class="header">{title}</h1>
    <slot />
  </div>
</BaseLayout>

<style lang="postcss">
  h1.header {
    @apply font-display text-4xl border-b border-black border-opacity-10;
    @apply text-center py-6 mb-6;
  }

  ul {
    @apply !py-4;

    li {
      @apply py-4 flex flex-col gap-1;

      a {
        @apply block; 
        @apply text-lg font-sans font-bold mb-0 mt-1;
      }

      p {
        @apply opacity-75 text-base;
      }
    }
  }
</style>
