---
import BaseLayout from "../layouts/BaseLayout.astro";
import PageLayout from "../layouts/PageLayout.astro";
---

<PageLayout title="Design">
  <div class="grid grid-cols-1 max-w-4xl gap-4 mx-auto">
    <div
      class="bg-gradient-to-b h-48 rounded-lg p-8 from-white to-background border border-opacity-10 border-black shadow-md"
    >
      <div class="flex flex-col gap-2">
        <h4 class="font-display text-3xl">Scubah</h4>
        <p class="font-sans opacity-75 text-sm">
          The next-generation app for divers.
        </p>
      </div>
    </div>
    <div
      class="bg-gradient-to-b h-48 rounded-lg p-8 from-white to-background border border-opacity-10 border-black shadow-md"
    >
      <div class="flex flex-col gap-2">
        <h4 class="font-display text-4xl">Scubah</h4>
        <p class="font-sans opacity-75 text-base">
          The next-generation app for divers.
        </p>
      </div>
    </div>
  </div>
</PageLayout>
